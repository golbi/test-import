{
	"ver": "2",
	"name": "ldapProfile",
	"description": "Allows to translate local Open LDAP data into local representation. gr1->/A/B, identity is taken as-is, cn->cn, everything is synced automatically",
	"rules": [
		{
			"condition": {
				"conditionValue": "true"
			}, 
			"action": {
				"name": "mapIdentity",
				"parameters": [
					"identifier",
					"id",
					"sys:all",
					"CREATE_OR_MATCH"
				]
			}			
		},
			
		{
			"condition": {
				"conditionValue": "groups contains 'gr1'"
			},
			"action": {
				"name": "mapGroup",
				"parameters": [
					"'/A/B'"
				]
			}
		},	

		{
			"condition": {
				"conditionValue": "true"
			}, 
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"cn",
					"/A",
					"attr['cn']",
					"CREATE_OR_UPDATE"
				]
			}			
		}	
	]
}
